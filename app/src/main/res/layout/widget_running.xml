<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_running"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header: Timer + Add Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="#FEF7FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_add_timer"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Add Timer"
            android:src="@android:drawable/ic_input_add"
            android:tint="#FEF7FF" />
    </RelativeLayout>

    <!-- Main Countdown Timer - Pill Shape Container -->
    <FrameLayout
        android:id="@+id/timer_pill_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:background="@drawable/widget_bg_running">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/text_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="09:59"
                android:textColor="#FEF7FF"
                android:textSize="56sp"
                android:textStyle="bold" />

            <!-- Reset/Stop Icon (appears on running/paused/overrun) -->
            <ImageView
                android:id="@+id/btn_reset"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toEndOf="@id/text_countdown"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:contentDescription="Reset"
                android:src="@drawable/ic_reset"
                android:tint="#FEF7FF"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btn_stop"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toEndOf="@id/text_countdown"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:contentDescription="Stop"
                android:src="@drawable/ic_stop"
                android:tint="#FEF7FF"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

    <!-- Remaining Idle Timer Slot - Default Pill Shape -->
    <FrameLayout
        android:id="@+id/timer_slot_1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_bg_idle"
        android:visibility="gone">

        <TextView
            android:id="@+id/timer_slot_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5m"
            android:textColor="#FEF7FF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />
    </FrameLayout>

</LinearLayout>