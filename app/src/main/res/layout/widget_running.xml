<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_running"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header: Timer + Add Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="#FEF7FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_add_timer"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Add Timer"
            android:src="@android:drawable/ic_input_add"
            android:tint="#FEF7FF" />
    </RelativeLayout>

    <!-- Main Countdown Timer with Pause Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/text_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="09:59"
            android:textColor="#FEF7FF"
            android:textSize="56sp"
            android:textStyle="bold" />

        <!-- Pause/Resume Icon -->
        <ImageView
            android:id="@+id/btn_pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toEndOf="@id/text_countdown"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:contentDescription="Pause"
            android:src="@android:drawable/ic_media_pause"
            android:tint="#FEF7FF" />
    </RelativeLayout>

    <!-- Remaining Idle Timer Slot -->
    <TextView
        android:id="@+id/timer_slot_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5m"
        android:textColor="#FEF7FF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Stop Button -->
    <ImageView
        android:id="@+id/btn_stop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>