<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_idle"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header: Timer + Add Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="#FEF7FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_add_timer"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Add Timer"
            android:src="@android:drawable/ic_input_add"
            android:tint="#FEF7FF" />
    </RelativeLayout>

    <!-- Timer Slot 1 - Default Pill Shape Button -->
    <FrameLayout
        android:id="@+id/timer_slot_1_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:background="@drawable/widget_bg_idle"
        android:visibility="gone">

        <TextView
            android:id="@+id/timer_slot_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="10m"
            android:textColor="#FEF7FF"
            android:textSize="40sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Timer Slot 2 - Default Pill Shape Button -->
    <FrameLayout
        android:id="@+id/timer_slot_2_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/widget_bg_idle"
        android:visibility="gone">

        <TextView
            android:id="@+id/timer_slot_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="05m"
            android:textColor="#FEF7FF"
            android:textSize="40sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Empty State -->
    <TextView
        android:id="@+id/text_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No timers set"
        android:textColor="#66FEF7FF"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>